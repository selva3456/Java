import java.util.*;
class removeDupNthLargestSmallest
{
	public static void main(String[] args) 
	{
		int[]a={18,14,7,18,2,7,2,6,3,2};
		System.out.println(Arrays.toString(a));
		int[]res=removeDup(a);
		System.out.println(Arrays.toString(res));
		System.out.println("1st largest:"+findNthLargest(a,1));
		System.out.println("1st Smallest:"+findNthSmallest(a,1));
	}
	public static int[] removeDup(int[]a)
	{
		Arrays.sort(a);
		int[]b=new int[a.length];
		int x=0;
		for (int i=0;i<a.length-1 ;i++ )
		{
			if(a[i]!=a[i+1])
				b[x++]=a[i];
		}
		b[x++]=a[a.length-1];
		int[]res=new int[x];
		for (int i=0;i<res.length ;i++ )
		{
			res[i]=b[i];
		}
		return res;
	}
	public static int findNthLargest(int[]a,int n)
	{
		int[]res=removeDup(a);
		return res[res.length-n];
	}
	public static int findNthSmallest(int[]a,int n)
	{
		int[]res=removeDup(a);
		return res[n-1];
	}
}
